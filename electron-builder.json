{
  "asar": true,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "config.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    },
    {
      "from": "../electron-dist",
      "filter": ["**/*"]
    }
  ],
  "buildDependenciesFromSource": false,
  "npmRebuild": false,
  "extraResources": [
    {
      "from": "resources/",
      "to": "resources",
      "filter": ["**/*"]
    },
    {
      "from": "app/config.json",
      "to": "assets/config.json"
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
