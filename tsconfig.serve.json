{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/js",
    "allowJs": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "app/main.ts", "app/preload.js", "app/sailpoint-sdk/sdk-preload.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
