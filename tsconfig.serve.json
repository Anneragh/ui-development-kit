{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./electron-dist",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2020",
    "types": [
      "node"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
